#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running tests before commit..."
npm test -- --watchAll=false --silent

echo "ğŸ“„ Parsing markdown files..."
npm run parse-md-files

echo "ğŸ” Checking for changes after parsing markdown files..."
if ! git diff --quiet; then
  echo "âŒ Changes detected after running parse-md-files. Please commit the updated files."
  exit 1
fi

echo "âœ… No changes detected. Moving on..."

echo "ğŸ” Running SCSS lint check..."
npm run lint:scss
if [ $? -ne 0 ]; then
  echo "âŒ SCSS linting failed. Please fix the errors before committing."
  exit 1
fi

echo "âœ… All checks passed. Proceeding with the commit..."


