{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", // Enable base URL for absolute imports
    "typeRoots": ["./node_modules/@types", "./src/shared"], // Add custom type declarations
    "paths": {
      "shared/*": ["shared/*"], // Define alias for shared folder
      "utils/*": ["utils/*"], // Define alias for utils folder if needed
      "components/*": ["components/*"] // Define alias for components folder
    }
  },
  "include": ["src"]
}
